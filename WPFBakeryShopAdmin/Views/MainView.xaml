<Window x:Class="WPFBakeryShopAdmin.Views.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFBakeryShopAdmin.Views"
        mc:Ignorable="d"
        Title="MainView"
        Height="700"
        Width="882"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewmodels="clr-namespace:WPFBakeryShopAdmin.ViewModels"
        xmlns:converter="clr-namespace:WPFBakeryShopAdmin.Converters"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
        Background="#F5F5FA"
        TextElement.FontSize="15"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        WindowStartupLocation="CenterScreen"
        Icon="/Images/favicon.ico"
        WindowState="Maximized">
    <Window.Resources>
        <converter:SmallUserImageConverter x:Key="imageConverter"></converter:SmallUserImageConverter>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="30" />
            <ColumnDefinition Width="260" />
            <ColumnDefinition />
            <ColumnDefinition Width="30" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0"
              Grid.Row="1"
              Panel.ZIndex="3"
              Background="White" />
        <Grid  Grid.Column="1"
               Grid.Row="1"
               Panel.ZIndex="3">
            <materialDesign:Card materialDesign:ShadowAssist.ShadowDepth="Depth3"
                                 UniformCornerRadius="12"
                                 Background="#fd9935">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="140" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0">
                        <Border Padding="10"
                                Margin="0 0 0 0">
                            <Image RenderOptions.BitmapScalingMode="HighQuality"
                                   RenderOptions.EdgeMode="Aliased"
                                   Source="/Images/logo-light.png"
                                   Width="200" />
                        </Border>

                        <Border Background="White"
                                CornerRadius="4"
                                HorizontalAlignment="Center"
                                Padding="15 0 15 5"
                                MinWidth="140">
                            <Grid>
                                <ComboBox x:Name="LanguageList"
                                          materialDesign:HintAssist.Hint="Language"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Stretch"
                                          Grid.Column="0"
                                          FontSize="12"
                                          materialDesign:ComboBoxAssist.ClassicMode="False"
                                          Foreground="#fd9935"
                                          materialDesign:TextFieldAssist.UnderlineBrush="#fd9935"
                                          materialDesign:TextFieldAssist.UnderlineCornerRadius="10"
                                          FontWeight="Bold"
                                          Grid.Row="1">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <Image Source="{Binding LanguageFlagURL}"
                                                       RenderOptions.BitmapScalingMode="HighQuality"
                                                       RenderOptions.EdgeMode="Aliased"
                                                       MaxWidth="25"
                                                       Margin="0 0 7 0" />
                                                <TextBlock Text="{Binding LanguageName}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                            </Grid>

                        </Border>

                    </StackPanel>

                    <!--ImageSource="D:\Images\Genshin\paimap.jpg"-->
                    <Border Grid.Row="1"
                            Padding="10 0"
                            Margin="0 15 0 15">

                        <RadioButton Style="{StaticResource CustomMenuItemAccount}"
                                     GroupName="MenuGroup"
                                     x:Name="LoadPersonalAccount">
                            <DockPanel>
                                <Ellipse  Width="50"
                                          Height="50"
                                          x:Name="ellipse"
                                          DockPanel.Dock="Left"
                                          Margin="0 0 10 0">
                                    <Ellipse.Fill>
                                        <ImageBrush x:Name="UserImageUrl"
                                                    ImageSource="{Binding PersonalAccount.ImageUrl, Converter={StaticResource imageConverter}}"
                                                    RenderOptions.BitmapScalingMode="HighQuality"
                                                    RenderOptions.EdgeMode="Unspecified">
                                        </ImageBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <Grid DockPanel.Dock="Right">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock x:Name="PersonalAccount_FullName"
                                                   Text="Nguyễn Ngọc Minh Tú"
                                                   DockPanel.Dock="Top"
                                                   FontWeight="Bold"
                                                   HorizontalAlignment="Left"
                                                   Margin="0 0 0 5" />
                                        <TextBlock x:Name="PersonalAccount_Email"
                                                   Text="minhtu1392000@gmail.com"
                                                   HorizontalAlignment="Left"
                                                   FontSize="12"
                                                   FontWeight="Medium" />
                                    </StackPanel>

                                </Grid>

                            </DockPanel>
                        </RadioButton>

                    </Border>

                    <Border Grid.Row="2"
                            Padding="10">
                        <StackPanel>
                            <RadioButton Style="{StaticResource CustomMenuItem}"
                                         GroupName="MenuGroup"
                                         x:Name="LoadDashboard">
                                <StackPanel Orientation="Horizontal">
                                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                                           RenderOptions.EdgeMode="Aliased"
                                           Source="/Images/dashboard-icon-512.png" />
                                    <TextBlock Margin="15 0 0 0"
                                               VerticalAlignment="Center"
                                               Text="Bảng thống kê" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton Style="{StaticResource CustomMenuItem}"
                                         GroupName="MenuGroup"
                                         x:Name="LoadProduct">
                                <StackPanel Orientation="Horizontal">
                                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                                           RenderOptions.EdgeMode="Aliased"
                                           Source="/Images/product-icon-512.png" />
                                    <TextBlock Margin="15 0 0 0"
                                               VerticalAlignment="Center"
                                               Text="Sản phẩm" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton Style="{StaticResource CustomMenuItem}"
                                         GroupName="MenuGroup"
                                         x:Name="LoadBill">
                                <StackPanel Orientation="Horizontal">
                                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                                           RenderOptions.EdgeMode="Aliased"
                                           Source="/Images/bill-icon-512.png" />
                                    <TextBlock Margin="15 0 0 0"
                                               VerticalAlignment="Center"
                                               Text="Đơn hàng" />
                                </StackPanel>
                            </RadioButton>
                            <RadioButton Style="{StaticResource CustomMenuItem}"
                                         GroupName="MenuGroup"
                                         x:Name="LoadAccount">
                                <StackPanel Orientation="Horizontal">
                                    <Image RenderOptions.BitmapScalingMode="HighQuality"
                                           RenderOptions.EdgeMode="Aliased"
                                           Source="/Images/account-icon-512.png" />
                                    <TextBlock Margin="15 0 0 0"
                                               VerticalAlignment="Center"
                                               Text="Tài khoản" />
                                </StackPanel>
                            </RadioButton>

                        </StackPanel>

                    </Border>
                    <Border Grid.Row="3">
                        <Button x:Name="LogOut"
                                Style="{StaticResource CustomPrimaryButton}"
                                Content="ĐĂNG XUẤT"
                                VerticalAlignment="Bottom"
                                Background="#E63946"
                                Margin="20" />
                    </Border>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <ContentControl x:Name="ActiveItem"
                        Grid.Row="1"
                        Grid.Column="2"
                        Margin="30 0 0 0" />


    </Grid>
</Window>
